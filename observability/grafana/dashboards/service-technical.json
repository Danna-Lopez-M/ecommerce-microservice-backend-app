{
  "id": null,
  "uid": "service-tech-detail",
  "title": "Service - Technical Detail",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "style": "dark",
  "refresh": "30s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_server_requests_seconds_count, application)",
        "refresh": 1,
        "includeAll": false,
        "multi": false,
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Requests per second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{application=~\"$service\"}[1m])) by (application)"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error rate (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\",application=~\"$service\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=~\"$service\"}[5m]))"
        }
      ]
    },
    {
      "id": 3,
      "title": "Latency p95 (seconds)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=~\"$service\"}[5m])) by (le))"
        }
      ]
    },
    {
      "id": 4,
      "title": "JVM Heap Used (bytes)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "avg(jvm_memory_used_bytes{area=\"heap\",application=~\"$service\"})"
        }
      ]
    },
    {
      "id": 5,
      "title": "Circuit breaker failures",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(resilience4j_circuitbreaker_calls_seconds_count{kind=\"failed\",application=~\"$service\"}[5m]))"
        }
      ]
    },
    {
      "id": 6,
      "title": "Up / Down",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "avg(up{job=~\"$service\"})"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "textMode": "auto",
        "orientation": "auto"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
