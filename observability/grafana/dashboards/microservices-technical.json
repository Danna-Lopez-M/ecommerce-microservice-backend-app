{
  "id": null,
  "uid": "microservices-tech",
  "title": "Microservices - Technical Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "style": "dark",
  "refresh": "30s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "label": "Service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_server_requests_seconds_count, application)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Requests per second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(application)(rate(http_server_requests_seconds_count{application=~\"$application\"}[1m]))"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error rate (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\",application=~\"$application\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=~\"$application\"}[5m]))"
        }
      ]
    },
    {
      "id": 3,
      "title": "Latency p95 (seconds)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by(le, application) (rate(http_server_requests_seconds_bucket{application=~\"$application\"}[5m])))"
        }
      ]
    },
    {
      "id": 4,
      "title": "JVM Heap Used (bytes)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "avg by(application)(jvm_memory_used_bytes{area=\"heap\",application=~\"$application\"})"
        }
      ]
    },
    {
      "id": 5,
      "title": "Circuit breaker failures",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(application)(rate(resilience4j_circuitbreaker_calls_seconds_count{kind=\"failed\",application=~\"$application\"}[5m]))"
        }
      ]
    },
    {
      "id": 6,
      "title": "Up / Down",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "avg by(job) (up{job=~\"$application\"})"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "textMode": "auto",
        "orientation": "auto"
      }
    }
  ]
}
